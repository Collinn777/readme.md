#include <stdio.h>
int main (void) {

    char nome [50];
    int idade;
    float dinheiro;
    int dinheiro_faltando;
    //declarando variaveis

    printf("qual o seu nome?: ");
    scanf("%s" , nome);

    printf("qual a sua idade?: ");
    scanf("%d\n" , &idade);

    printf("quantos de dinheiro vc tem ?: ");
    scanf("%.2f\n" , &dinheiro);

    printf("dinheiro q falta pra voce: ");
    scanf("%d" ,&dinheiro_faltando);

    //escrever variaveis

    printf("seu nome eh %s, voce tem %d anos de idade, voce tem %.2f de dinheiro, e falta %d dinheiro pra voce", nome, idade, dinheiro, dinheiro_faltando);

    return 0;
}