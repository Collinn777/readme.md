#include <stdio.h>
    int main (void) {
        int a, b, c; //lados do triangulo

        printf("digite os numeros: ");
        scanf("%d %d %d" , &a, &b, &c);


    if ((a<b+c)&&(b<a+c)&&(c<a+b)&&(a>0)&&(b>0)&&(c>0)){
        //o triangulo eh valido
        //verificar o tipo do triangulo
    
        //verificando c o triangulo eh equilatero
        if((a==b)&&(b==c)){
            printf("o triangulo eh um equilatero");
        }
        else if ((a!=b)&&(b!=c)&&(a!=c)){
            //triangulo eh escaleno
            printf("os lados do trriangulo formam um escaleno");
        }
        else{
            printf("os lados do triangulo formam um triangulo isosceles");
         }
    
         
    } else{
        printf("os lados nao formam um triangulo");
    
    }
        return 0;
    }
